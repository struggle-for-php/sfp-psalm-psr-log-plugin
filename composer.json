{
    "name": "struggle-for-php/sfp-psalm-psr-log-plugin",
    "description": "Stubs to let Psalm understand psr/log (PSR-3) strictly",
    "keywords": ["psalm", "psalm-plugin", "static analysis", "static-analysis", "psr3"],
    "type": "psalm-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "sasezaki",
            "email": "sasezaki@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4.0 || ^8.0 || ^8.1 || ^8.2",
        "vimeo/psalm": "^5"
    },
    "require-dev": {
        "psr/log": "^1.1",
        "squizlabs/php_codesniffer": "^3.7",
        "weirdan/codeception-psalm-module": "^0.14.0"
    },
    "extra": {
        "psalm" : {
            "pluginClass": "Sfp\\Psalm\\PsrLogPlugin\\Plugin"
        }
    },
    "autoload": {
        "psr-4": {
            "Sfp\\Psalm\\PsrLogPlugin\\": ["."]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SfpTest\\Psalm\\PsrLogPlugin\\": [
                "tests/_support",
                "tests/acceptance"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "bamarni/composer-bin-plugin": true
        },
        "platform": {
            "php": "7.4.99"
        }
    },
    "scripts" : {
        "check": [
            "@cs-check",
            "@test",
            "@analyze"
        ],
        "analyze": "psalm",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "codecept run -v"
    }
}
